unit untUtils;

interface

implementation

function ByteArrayToHex(var ary:array of byte;var str:String):Boolean;
var
  i:integer;
begin
     str:='';
     for i:=low(ary) to High(ary) do
     begin
          if(Length(IntToHex(ary[i],1)) = 1) then
          begin
               str:=Str+'0'+ IntToHex(ary[i],1)+ '-';
          end
          else
          begin
               str:=Str+IntToHex(ary[i],1) + '-';
          end;
     end;

     Result:=true;
  end;

end.
